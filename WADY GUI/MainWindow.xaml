<Window x:Class="WADY_GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WADY_GUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="auto" Width="auto" Loaded="Window_Loaded" >
    <Grid>
        <Menu x:Name="menu" HorizontalAlignment="Left" Height="20" Margin="0,0,-0.4,0" VerticalAlignment="Top" Width="762">
            <MenuItem Header="MenuItem">
                <MenuItem Header="MenuItem" HorizontalAlignment="Left" Width="144"/>
            </MenuItem>
            <MenuItem Header="MenuItem"/>
        </Menu>
        <StatusBar HorizontalAlignment="Left" Height="25" Margin="0,481,-0.4,-0.4" VerticalAlignment="Top" Width="762">
            <StatusBarItem Content="StatusBarItem1" Height="25" VerticalAlignment="Top" Margin="0,-10,0,0"/>
        </StatusBar>
        <TabControl x:Name="tabControl" HorizontalAlignment="Left" Height="346" Margin="0,20,-0.4,0" VerticalAlignment="Top" Width="762">
            <TabItem Header="TabItem">
                <Grid Background="#FFE5E5E5" >
                    <ListView x:Name="listView" HorizontalAlignment="Left" Height="319" VerticalAlignment="Top" Width="756">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
